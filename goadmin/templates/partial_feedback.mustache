<<define "partial_feedback">>

    <!--home Section -->
    <!--profile section -->
<<if eq .Message "">>
    <section id="featurehome" class="feature sections">
        <div class="container">
            <div class="row">
                <div class="main_feature text-center">

                    <div class="col-sm-12">
                        <div class="single_feature">
                            <<.Message>>

                            <h4>Rate the band</h4>
                            <div class="separator3"></div>
                            <p>Please rate <<.Band.BandName>></p>
                            <div class="col-md-12" id="bandForm">
                                            <form method="POST" action="/feedback/<<.Band.ID>>">
