                                                     <div class="clearfix"></div>
                                                        <hr>

                                                </div>   
                                                <div class="form-group">
                                                    <textarea class="form-control" name="band_description" id="exampleFormControlTextarea1" rows="3" placeholder="Special Mention"></textarea>
                                                </div>
                                                <button type="submit" class="btn btn-lg m_t_10">Submit</button>
                                            </form>

                                        </div>
                        </div>
                    </div>

                    

                    

                                    </div>
                                </div>
                            </div>
                            <!--End of container -->
                        </section>
    <<else>>
<p><<.Message>></p>
    <<end>>

